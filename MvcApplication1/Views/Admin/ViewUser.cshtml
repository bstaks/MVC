        <div class="widget-header widget-header-small" ng-hide="roles.length ==0">
            <h5 class="widget-title lighter">User Details</h5>
        </div>


        <table class="table table-striped table-bordered table-hover dataTable no-footer DTTT_selectable" id="dynamic-table" role="grid" aria-describedby="dynamic-table_info" ng-hide="roles.length ==0">
            <thead>
                <tr role="row">
                    <th class="center sorting_disabled" rowspan="1" colspan="1" aria-label=" ">
                        <label class="pos-rel">
                            <input type="checkbox" class="header" ng-click="onSelect()">
                            <span class="lbl"></span>
                        </label>
                    </th>
                    <th class="sorting" tabindex="0" aria-controls="dynamic-table" rowspan="1" colspan="1" aria-label="Domain: activate to sort column ascending">UserName</th>
                    <th class="sorting_disabled" rowspan="1" colspan="1" aria-label="">Role Name</th>
                </tr>
            </thead>

            <tbody ng-repeat="d in roles.data">
                <tr role="row" ng-class="$index%2 == 0 ? 'even':'odd'">
                    <td class="center">
                        <label class="pos-rel">
                            <input type="checkbox" class="ace" ng-click="ChildCheckbox()">
                            <span class="lbl"></span>
                        </label>
                    </td>

                    <td>
                        {{d.UserName}}
                    </td>
                    <td>
                        {{d.RoleName | ContentLength}}
                    </td>


                    <td>
                        <div class="hidden-sm hidden-xs action-buttons">
                            <a href="@Url.Action("AddRoleToUser")" class="blue">
                                <i class="ace-icon glyphicon glyphicon-search bigger-130"></i>
                            </a>
                            
                            <a href="@Url.Action("AddRoleToUser")" class="green">
                                <i class="ace-icon glyphicon glyphicon-pencil bigger-130"></i>
                            </a>

                            @*<a href="@Url.Action("DeleteRole")/{{d.RoleId}}?RoleName={{d.RoleName}}" class="red">
                                <i class="ace-icon glyphicon glyphicon-trash bigger-120"></i>
                            </a>*@
                        </div>

                        <div class="hidden-md hidden-lg">
                            <div class="inline pos-rel">
                                <button data-position="auto" data-toggle="dropdown" class="btn btn-minier btn-yellow dropdown-toggle">
                                    <i class="ace-icon fa fa-caret-down icon-only bigger-120"></i>
                                </button>

                                <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">
                                    <li>
                                        <a title="View" data-rel="tooltip" class="tooltip-info" href="#">
                                            <span class="blue">
                                                <i class="ace-icon glyphicon glyphicon-search bigger-120"></i>
                                            </span>
                                        </a>
                                    </li>

                                    <li>
